{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "AGC Timer Control",
  "version": "0.1.0",
  "identifier": "amazingrace.timer",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev:next",
    "beforeBuildCommand": "npm run build:next"
  },
  "app": {
    "windows": [
      {
        "title": "AGC Timer Control",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "focusable": true,
        "maximized": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQyM0QwRDBGNEVFNkRCRUYKUldUdjIrWk9EdzA5MHBjdHRRTS9ITkdjc2YzdGtjOHRIb0NwbE5hM2MrKzlXT1AwOEtuT1piRGQK",
      "endpoints": [
        "https://raw.githubusercontent.com/shonubijerry/propresenter-timers/master/latest.json",
        "https://github.com/shonubijerry/propresenter-timers/master/latest.json"
      ]
    }
  }
}
