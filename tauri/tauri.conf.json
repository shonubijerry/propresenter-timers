{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "AGC Timer Control",
  "version": "0.1.0",
  "identifier": "amazingrace.timer",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev:next",
    "beforeBuildCommand": "npm run build:next"
  },
  "app": {
    "windows": [
      {
        "title": "AGC Timer Control",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "focusable": true,
        "maximized": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
