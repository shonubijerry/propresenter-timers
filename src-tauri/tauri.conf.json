{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "agc-timer",
  "version": "0.1.0",
  "identifier": "com.amazingrace.timer",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev:next",
    "beforeBuildCommand": "npm run build:next"
  },
  "app": {
    "windows": [
      {
        "title": "AGC Timer Control",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "focusable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-window-creates-webview",
          "description": "This capability allows the `main` window access to `filesystem`, `window` and `webview`",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:window:allow-set-focus",
            "core:webview:allow-create-webview-window"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
